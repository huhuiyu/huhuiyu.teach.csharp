@{
    Layout = "~/_LayoutMain.cshtml";
}
@section js{
    <script src="~/Scripts/app/admin/subject.js"></script>
}

<div id="divModify" style="display: none;">
    <input type="hidden" id="txtSid" />
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">主题名称</span>
            <input type="text" id="txtSname" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">主题描述</span>
            <textarea id="txtSinfo" rows="3" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">主题状态</span>
            <select id="txtIsEnable" class="form-control">
                <option value="y">启用中</option>
                <option value="n">停用中</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">所属分类</span>
            <select id="txtTid" class="form-control"></select>
        </div>
    </div>
    <hr />
    <div class="text-center pd-5">
        <span class="btn btn-primary" id="btnSave">保存</span>
        <span class="btn btn-primary" id="btnCancel">取消</span>
    </div>
</div>


<div class="h100 no-scroll">
    <div>@RenderPage("~/Views/Common/ViewUserInfo.cshtml")</div>



    <div class="h100">
        <div class="pull-left wl bg-info h100">
            @RenderPage("~/Views/Common/ViewMenu.cshtml")
        </div>
        <div class="pull-left wr">
            <h1 class="text-center">主题管理<span class="pull-right btn btn-primary" id="btnAdd">添加主题</span></h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>所属分类</th>
                        <th>主题</th>
                        <th>主题描述</th>
                        <th>启用状态</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody id="tbSubjects"></tbody>
            </table>
            <nav class="text-center">
                <ul class="pagination">
                    <li>
                        <a href="javascript:void(0)" id="btnPre">
                            <span>&laquo;</span>
                        </a>
                    </li>
                    <li>
                        <a href="javascript:void(0)" id="btnFirst">
                            <span>第一页</span>
                        </a>
                    </li>
                    <li>
                        <a href="javascript:void(0)">
                            <span id="spPageInfo"></span>
                        </a>
                    </li>
                    <li>
                        <a href="javascript:void(0)" id="btnLast">
                            <span>最后一页</span>
                        </a>
                    </li>
                    <li>
                        <a href="javascript:void(0)" id="btnNext">
                            <span>&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
