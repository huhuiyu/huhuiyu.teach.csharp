@{
    Layout = "~/_LayoutMain.cshtml";
}
@section js{
    <script src="~/Scripts/app/admin/index.js"></script>
}

@section style{
    <link href="~/Content/app/admin.css" rel="stylesheet" />
}

<div class="container">
    <div class="row">
        <div class="hidden-xs col-sm-2 col-md-3"></div>
        <div class="col-xs-12 col-sm-8 col-md-6">
            <div class="admin-login bg-primary">
                <div class="h2 text-center pd-5">论坛后台管理登陆</div>
                <div class="bg-info pd-5">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">用户名：</div>
                            <input class="form-control" type="text" id="txtUsername" placeholder="请输入用户名" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">密&nbsp;&nbsp;&nbsp;&nbsp;码：</div>
                            <input class="form-control" type="password" id="txtPassword" placeholder="请输入密码" />
                        </div>
                    </div>
                </div>
                <div class="text-center pd-5">
                    <span class="btn btn-danger" id="btnLogin">登录</span>
                    <span class="btn btn-danger" id="btnRest">重填</span>
                </div>
            </div>
        </div>
        <div class="hidden-xs col-sm-2 col-md-3"></div>
    </div>
</div>
