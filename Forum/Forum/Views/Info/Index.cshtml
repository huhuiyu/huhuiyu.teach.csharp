@{
    Layout = "~/_LayoutMain.cshtml";
}
@section js{
    <script src="~/Scripts/app/info.js"></script>
}
@RenderPage("~/Views/Common/ViewUser.cshtml")
<div class="text-right">
    <a href="javascript:history.back();">返回</a>
</div>
<div class="pd-5 mr-5">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">
                <div id="divTypeInfo" class="text-center"></div>
            </div>
        </div>
        <div class="panel-body">
            <div id="divInfo"></div>
            <hr />

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">回复</span>
                    <input class="form-control" id="txtContent" />
                    <span class="input-group-addon btn btn-default" id="btnAddReturns">确定</span>
                </div>
            </div>

            <div id="divReturns"></div>
            <div class="text-center">
                <span id="btnMore" class="btn btn-default">查看更多</span>
            </div>
        </div>
        <div class="panel-footer">
            <div id="divCreateDate" class="text-right"></div>
        </div>
    </div>
</div>
